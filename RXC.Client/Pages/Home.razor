@page "/"
@inject NavigationManager Navigation

<PageTitle>Welcome</PageTitle>

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-8">
    <div class="bg-white shadow-xl rounded-2xl p-10 max-w-md text-center">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Welcome to RenewX Control</h1>
        <p class="text-gray-600 mb-8">Please login or register to continue</p>

        <div class="flex justify-around">
            <button @onclick="NavigateToLogin"
                    class="bg-blue-600 hover:bg-blue-700 text-blue font-bold py-2 px-4 rounded-xl shadow">
                Login
            </button>

            <button @onclick="NavigateToRegister"
                    class="bg-green-600 hover:bg-green-700 text-blue font-bold py-2 px-4 rounded-xl shadow">
                Register
            </button>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin() => Navigation.NavigateTo(uri:"/login");
    private void NavigateToRegister() => Navigation.NavigateTo(uri:"/register");
}