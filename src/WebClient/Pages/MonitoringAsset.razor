@page "/Monitoring"


<h3>Asset Monitoring Dashboard</h3>

@if (_assetsMonitoring == null)
{
    <p>Loading...</p>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var site in _assetsMonitoring)
        {

            <div class="container my-4">
                <!-- Site Info Card -->
                <div class="row bg-light p-3 mb-4 border border-info rounded shadow-sm align-items-center">
                    <div class="col-md-4 mb-2 mb-md-0">
                        <p class="mb-0"><strong><i class="fas fa-user me-2"></i>Username:</strong> @site.UserName</p>
                    </div>
                    <div class="col-md-4 mb-2 mb-md-0">
                        <p class="mb-0"><strong><i class="fas fa-solar-panel me-2"></i>Site:</strong> @site.SiteName</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-0"><strong><i class="fas fa-map-marker-alt me-2"></i>Location:</strong> @site.SiteLocation</p>
                    </div>
                </div>

                <!-- Energy Systems Dashboard -->
                <div class="row g-4">
                    <!-- Solar Panel Card -->
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0"><i class="fas fa-sun me-2"></i>Solar Panel</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Active Power:</span>
                                    <span class="fw-bold">@site.Solar.ActivePower kW</span>
                                </div>
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Set Point:</span>
                                    <span class="fw-bold">@site.Solar.SetPoint kW</span>
                                </div>
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Irradiance:</span>
                                    <span class="fw-bold">@site.Solar.Irradiance W/m²</span>
                                </div>
                                <div class="d-flex justify-content-between py-2">
                                    <span>Status Message:</span>
                                    <span class="fw-bold">@site.Solar.Message W/m²</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Wind Turbine Card -->
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header bg-success text-white">
                                <h5 class="card-title mb-0"><i class="fas fa-fan me-2"></i>Wind Turbine</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Active Power:</span>
                                    <span class="fw-bold">@site.Turbine.ActivePower kW</span>
                                </div>
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Set Point:</span>
                                    <span class="fw-bold">@site.Turbine.SetPoint kW</span>
                                </div>
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Wind Speed:</span>
                                    <span class="fw-bold">@site.Turbine.WindSpeed m/s</span>
                                </div>
                                <div class="d-flex justify-content-between py-2">
                                    <span>Status Message:</span>
                                    <span class="fw-bold">@site.Turbine.Message m/s</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Battery Card -->
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="card-title mb-0"><i class="fas fa-battery-three-quarters me-2"></i>Battery</h5>
                            </div>
                            <div class="card-body d-flex row">
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>State Charge:</span>
                                    <span class="fw-bold">@site.Battery.StateCharge / @site.Battery.Capacity kW</span>
                                </div>
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span>Set Point:</span>
                                    <span class="fw-bold">@site.Battery.SetPoint kW</span>
                                </div>
                                <div class="d-flex justify-content-between py-2">
                                    <span>Status:</span>
                                    <span class="fw-bold">@site.Battery.Message</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Optional: Add Font Awesome for icons -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        }
    </div>

}