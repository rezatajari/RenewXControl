@inherits LayoutComponentBase
@using RXC.Client.DTOs
@using RXC.Client.Services
@inject DashboardState DashboardState
@inject IJSRuntime JS
@inject NavigationManager Nav
@inject HttpClient Http
@inject AuthService AuthService

<div class="d-flex flex-column min-vh-100 bg-light">
    <!-- Top Navigation -->
    <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm sticky-top">
        <div class="container-fluid">
            <!-- Sidebar Toggle Button (visible on mobile) -->
            <button class="navbar-toggler me-2" type="button" @onclick="ToggleSidebar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Brand -->
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-lightning-charge-fill me-2"></i> RenewXControl
            </a>

            <!-- User Dropdown -->
            <div class="ms-auto">
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i> @userName
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <NavLink class="dropdown-item" href="/dashboard/profile">
                                <i class="bi bi-person me-2"></i> Profile
                            </NavLink>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <NavLink class="dropdown-item text-danger" @onclick="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </NavLink>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <div class="d-flex flex-grow-1">
        <!-- Sidebar - Collapsible -->
        <div class="@sidebarClass bg-white border-end shadow-sm">
            <div class="d-flex flex-column h-100 p-3">
                <!-- Navigation -->
                <ul class="nav nav-pills flex-column mb-auto">
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/dashboard/profile" Match="NavLinkMatch.All">
                            <i class="bi bi-speedometer2 me-2"></i> Profile
                        </NavLink>
                    </li>

                    <!-- Asset Management (Collapsible) -->
                    <li class="nav-item">
                        <button class="nav-link text-start w-100 d-flex justify-content-between align-items-center"
                                @onclick="ToggleAssetsMenu">
                            <span>
                                <i class="bi bi-gear me-2"></i> Asset Management
                            </span>
                            <i class="bi @(showAssetsMenu ? "bi-chevron-up" : "bi-chevron-down")"></i>
                        </button>

                        @if (showAssetsMenu)
                        {
                            <ul class="nav flex-column ps-4 mt-1">
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="/asset/add-site">
                                        <i class="bi bi-building me-2"></i> Add Site
                                    </NavLink>
                                </li>

                                @if (DashboardState.HasSite)
                                {
                                    <li class="nav-item">
                                        <NavLink class="nav-link" href="/asset/add-battery">
                                            <i class="bi bi-battery-charging me-2"></i> Add Battery
                                        </NavLink>
                                    </li>
                                    <li class="nav-item">
                                        <NavLink class="nav-link" href="/asset/add-solar">
                                            <i class="bi bi-sun me-2"></i> Add Solar
                                        </NavLink>
                                    </li>
                                    <li class="nav-item">
                                        <NavLink class="nav-link" href="/asset/add-turbine">
                                            <i class="bi bi-fan me-2"></i> Add Turbine
                                        </NavLink>
                                    </li>
                                }
                            </ul>
                        }
                    </li>

                    <!-- Monitoring -->
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/dashboard/monitoring">
                            <i class="bi bi-graph-up me-2"></i> Monitoring
                        </NavLink>
                    </li>
                </ul>

                <!-- Footer -->
                <div class="mt-auto pt-3 border-top text-center">
                    <small class="text-muted">v1.0.0</small>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            @Body
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-3 mt-auto">
        <div class="container-fluid text-center">
            <small>RenewXControl &copy; @DateTime.Now.Year</small>
        </div>
    </footer>
</div>
