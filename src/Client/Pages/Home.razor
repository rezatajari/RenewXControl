@page "/"
@inject NavigationManager Navigation

<PageTitle>RenewXControl - Home</PageTitle>

<div class="welcome-container text-center py-5">
    <h1 class="display-5 mb-4">Welcome to RenewXControl</h1>

    <EditForm Model="@model" class="card p-4 mx-auto" style="max-width: 500px;">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Quick Access</label>
            <div class="d-grid gap-2">
                <button type="button" @onclick="NavigateToLogin"
                        class="btn btn-primary">
                    Login to Your Account
                </button>
                <button type="button" @onclick="NavigateToRegister"
                        class="btn btn-outline-secondary">
                    Create New Account
                </button>
            </div>
        </div>
    </EditForm>

    <div class="mt-5">
        <h3 class="h5 mb-3">About Our System</h3>
        <p class="text-muted">
            Smart monitoring for your renewable energy assets
        </p>
    </div>
</div>

@code {
    private object model = new(); // Empty model for form validation structure

    private void NavigateToLogin() => Navigation.NavigateTo("/login");
    private void NavigateToRegister() => Navigation.NavigateTo("/register");
}